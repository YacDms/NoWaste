<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoWaiste.RecettePage"
             Title="Recette"
             BackgroundColor="White">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Image x:Name="RecipeImage" HeightRequest="200" Aspect="AspectFill" />

            <Label x:Name="RecipeTitle" FontSize="24" FontAttributes="Bold" TextColor="Black" />

            <Label Text="🧑‍🍳 Instructions" FontSize="20" FontAttributes="Bold" TextColor="Gray" />

            <Button Text="🔊 Lire la recette"
                BackgroundColor="DarkGreen"
                TextColor="White"
                CornerRadius="10"
                Clicked="OnLireRecetteClicked" />

            <StackLayout x:Name="InstructionsList" Spacing="10" />
            
        </StackLayout>
    </ScrollView>
</ContentPage>
